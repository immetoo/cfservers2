#
# Manages logcheck
#

control:
	any::
		logcheck_ignore_ntop		= ( /etc/logcheck/ignore.d.server/logcheck-ntop )

copy:
	any::
		${cfe_files}${logcheck_ignore_ntop}
			dest=${logcheck_ignore_ntop}
			server=${cfe_host}
			type=checksum backup=false
			mode=640 owner=root	group=logcheck
			
files:
	any::
		${logcheck_ignore_ntop}			mode=640 owner=root group=logcheck	action=fixall
